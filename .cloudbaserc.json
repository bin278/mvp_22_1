{
  "version": "2.0",
  "envId": "{{env.NEXT_PUBLIC_TENCENT_CLOUD_ENV_ID}}",
  "framework": {
    "name": "nextjs",
    "plugins": {
      "nextjs": {
        "useNodeVersion": "18",
        "installCommand": "pnpm install --frozen-lockfile",
        "buildCommand": "pnpm build",
        "outputDir": ".next",
        "staticOutputDir": ".next/static",
        "staticDomain": "{{env.NEXT_PUBLIC_APP_URL}}"
      }
    }
  },
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "functionRoot": "./cloud-functions",
  "functions": [
    {
      "name": "sendEmailVerification",
      "runtime": "Nodejs18",
      "handler": "index.main",
      "memorySize": 128,
      "timeout": 30,
      "envVariables": {},
      "vpc": {},
      "triggers": []
    }
  ],
  "region": "ap-guangzhou"
}

